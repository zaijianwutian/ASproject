<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:st="http://www.suntrans.net/"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
    android:background="@color/bg_action"
	android:clipToPadding="true"
	android:fitsSystemWindows="true"
    android:id="@+id/frame1"> 
	<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="50dip"
    android:orientation="horizontal"
    android:background="@color/bg_action">
		<TextView
			android:layout_height="50dip"
			android:layout_width="50dip"
			android:text="编辑"
			android:id="@+id/tx_edit"
			android:textColor="@color/white"
			android:gravity="center"
			android:visibility="gone"
			android:textSize="19sp"
			/>
		<View
			android:layout_height="50dip"
			android:layout_width="0dip"
			android:layout_weight="1"
			/>
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@color/white"
			android:padding="1dip"
			android:visibility="gone"
			android:layout_gravity="center"
			android:id="@+id/layout_room"
			android:orientation="horizontal">

			<TextView
				android:id="@+id/tx_out"
				android:layout_width="wrap_content"
				android:layout_height="27dip"
				android:paddingLeft="15dip"
				android:paddingRight="15dip"
				android:background="@color/white"
				android:textColor="@color/bg_action"
				android:textSize="16sp"
				android:layout_gravity="center"
				android:gravity="center"
				android:text="外间"/>
			<TextView
				android:id="@+id/tx_in"
				android:layout_width="wrap_content"
				android:layout_height="27dip"
				android:background="@color/bg_action"
				android:textColor="@color/white"
				android:textSize="16sp"
				android:layout_gravity="center"
				android:gravity="center"
				android:paddingLeft="15dip"
				android:paddingRight="15dip"
				android:text="里间"/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:id="@+id/layout_title"
			android:orientation="vertical">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="match_parent"
				android:background="@color/bg_action"
				android:textColor="@color/white"
				android:textSize="18sp"
				android:layout_gravity="center"
				android:gravity="center"
				android:text="三 川 智 能"/>
		</LinearLayout>
		<View
			android:layout_height="50dip"
			android:layout_width="0dip"
			android:layout_weight="1"
			/>
		<ImageView
	        android:id="@+id/img_info"
	        android:layout_width="50dip"
	        android:layout_height="50dip"
	        android:paddingTop="13dip"
	        android:paddingBottom="13dip"
	        android:layout_gravity="center|right"
	        android:scaleType="fitCenter"
	        android:paddingRight="10dip"
			android:visibility="gone"
	        android:src="@drawable/ic_info"
	        />
    </LinearLayout>

 	<views.IViewPager
        android:id="@+id/vPager"
		android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_gravity="center"
        android:layout_weight="1.0"
        android:flipInterval="30"
		st:enabled="true"
        android:persistentDrawingCache="animation"
         />
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="0.6dip"
		android:orientation="vertical"
		android:background="@color/gray"
		></LinearLayout>
	<LinearLayout
		 android:layout_width="match_parent"
		 android:layout_height="50dip"
		 android:paddingTop="0dip"
		 android:orientation="horizontal"
		 android:background="@color/white"
		 >
		  <LinearLayout
			 android:layout_width="0dip"
			 android:layout_height="fill_parent"
			 android:layout_weight="2"
			 android:orientation="vertical"
			 >
			<ImageView
				android:layout_width="fill_parent"
				android:layout_height="0dip"
				android:layout_weight="3"
				android:padding="5dip"
				android:id="@+id/img_control"
				android:src="@drawable/room"
				android:scaleType="fitCenter"/>
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="0dip"
				android:layout_weight="2"
				android:text="能源管控"
				android:id="@+id/tx_control"
				android:textSize="15sp"
				android:textColor="@color/bigred"
				android:gravity="center"/>
		  </LinearLayout>
		<LinearLayout
			 android:layout_width="0dip"
			 android:layout_height="fill_parent"
			 android:layout_weight="2"
			 android:orientation="vertical"
			 >
			<ImageView
				android:layout_width="fill_parent"
				android:layout_height="0dip"
				android:layout_weight="3"
				android:padding="5dip"
				android:id="@+id/img_parameter"
				android:src="@drawable/scene"
				android:scaleType="fitCenter"/>
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="0dip"
				android:layout_weight="2"
				android:text="室内环境"
				android:id="@+id/tx_parameter"
				android:textSize="15sp"
				android:textColor="@color/grey"
				android:gravity="center"/>
			</LinearLayout>
	</LinearLayout>
</TableLayout>
