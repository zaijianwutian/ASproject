<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:orientation="horizontal"
        android:background="@color/bg_action"
        >
        <LinearLayout
            android:layout_width="85dip"
            android:layout_height="50dip"
            android:orientation="horizontal"
            android:id="@+id/layout_back"
            android:background="@color/bg_action">
            <ImageView
                android:layout_width="35dip"
                android:layout_height="50dip"
                android:paddingLeft="0dip"
                android:paddingTop="5dip"
                android:paddingBottom="5dip"
                android:src="@drawable/ic_back_normal"
                android:id="@+id/back"
                />
            <TextView
                android:layout_height="50dip"
                android:layout_width="50dip"
                android:textColor="@color/white"
                android:text="返回"
                android:id="@+id/tx_back"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="19sp"/>
        </LinearLayout>
        <View
            android:layout_height="match_parent"
            android:layout_width="0dip"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="95dip"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:text="更换背景"
            android:layout_marginRight="15dip"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="19sp"
            android:id="@+id/tx_edit"
            />
        <TextView
            android:layout_width="50dip"
            android:layout_height="match_parent"
            android:layout_gravity="center|right"
            android:text="保存"
            android:layout_marginRight="15dip"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="19sp"
            android:id="@+id/tx_save"
            />
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layout"
            android:background="@drawable/bg_room"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:id="@+id/image"
                android:src="@drawable/bg_room"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:id="@+id/layout1"
            android:layout_gravity="bottom"
            android:background="@color/bg_color"
            >
            <HorizontalScrollView
                android:id="@+id/horizontalScrollView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >

                    <GridView
                        android:layout_width="900dip"
                        android:layout_height="50dip"
                        android:id="@+id/gridview"
                        android:columnWidth="90dip"
                        android:layout_marginLeft="15dip"
                        android:layout_marginRight="15dip"
                        android:numColumns="auto_fit"
                        android:scrollbars="horizontal"
                        android:layout_gravity="bottom"
                        android:scrollbarStyle="outsideOverlay"
                        android:horizontalSpacing="0dip"
                    />
                <!--<ListView-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:scrollbars="horizontal"-->
                    <!--android:id="@+id/listview"></ListView>-->
                </LinearLayout>
            </HorizontalScrollView>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layout_loading"
            android:background="@color/bg_color"
            android:visibility="gone"
            >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@color/bg_color"
                android:gravity="center">
                <ProgressBar
                    android:id="@+id/progressBar2"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="正在加载...."
                    android:textColor="@color/grey"
                    android:textSize="14sp"/>
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>

</LinearLayout>